@using IronBoots.Models.Products
@model ProductViewModel

<div class="container mt-4">
    <h1>Add New Product</h1>
    <form asp-action="Add" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label">Image URL</label>
            <input asp-for="ImageUrl" type="url" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Weight" class="form-label">Weight (kg)</label>
            <input asp-for="Weight" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Size" class="form-label">Size (cm²)</label>
            <input asp-for="Size" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductionCost" class="form-label">Production Cost</label>
            <input asp-for="ProductionCost" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="ProductionCost" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductionTime" class="form-label">Production Time (hh:mm:ss)</label>
            <input asp-for="ProductionTime" type="time" class="form-control" />
            <span asp-validation-for="ProductionTime" class="text-danger"></span>
        </div>

        <h3>Materials Required</h3>
        <div class="form-check">
            @foreach (var material in Model.Materials)
            {
                <div class="mb-2">
                    <input type="checkbox" class="form-check-input" name="SelectedMaterialsIds" value="@material.Id" />
                    <label class="form-check-label">@material.Name</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
